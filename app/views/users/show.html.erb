<div class="profile-container">
  <div class="profile-sidebar">
    <div class="user-card">
      <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class: "profile-photo" %>
        <%= link_to edit_user_path(current_user), class:"edit-button" do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
      <% else %>
      <%= image_tag "https://res.cloudinary.com/dmndhddgf/image/upload/v1669807599/development/cv__29__generated_wlvwfw.jpg", class: "profile-photo" %>
        <%= link_to edit_user_path(current_user), class:"edit-button" do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
      <% end %>
    </div>
    <h5><%= current_user.first_name %> <%= current_user.last_name %></h5>
    <div class="badge-container">
      <img src="https://res.cloudinary.com/dmndhddgf/image/upload/v1669904122/development/Meat_badge_moqhyv.png" alt="meat badge">
      <img src="https://res.cloudinary.com/dmndhddgf/image/upload/v1669898011/development/Pizza_badge_qre0hm.png" alt="pizza badge">
      <img src="https://res.cloudinary.com/dmndhddgf/image/upload/v1669904205/development/Sushi_badge_ftjdv6.png" alt="sushi badge">
    </div>

    <div class="tops">
      <h4>Your Lists</h4>
      <div class="top-container">
        <div class="card-tops-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url('<%= cl_image_path @dishes.first.category.photo.key %>')">
          <h2 class="card-top-name">Your rank of: <%= @dishes.first.name %></h2>
        </div>
        <div class="card-tops-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url('<%= cl_image_path @dishes[2].category.photo.key %>')">
          <h2 class="card-top-name">Your rank of: <%= @dishes[2].name %></h2>
        </div>
        <div class="card-tops-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url('<%= cl_image_path @dishes.last.category.photo.key %>')">
          <h2 class="card-top-name">Your rank of: <%= @dishes.last.name %></h2>
      </div>
      </div>
    </div>
  </div>

  <div class="profile-main-container">
    <div class="fav-rests-container">
      <h5>Your favorite restaurants</h5>
      <div class="card-container">
      <% @restaurants.each do |restaurant| %>
        <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url(https://media.cntraveler.com/photos/5bc8ec072383b345456ab323/master/w_2580%2Cc_limit/Prado__RC36688-EditRodrigo-Cardoso.jpg)">
          <h2 class="card-name"><%= restaurant.name %></h2>
          <h2 class="card-rank">Rank</h2>
            <div class="cuisines-container">
              <p class="card-cuisine"><%= restaurant.categories[1].cuisine %></p>
            </div>
        </div>
        <% end %>
    </div>
    </div>
  </div>
</div>
