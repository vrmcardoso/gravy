<div class="banner-container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dmndhddgf/image/upload/v1669735258/development/pablo-merchan-montes-Orz90t6o0e4-unsplash_fclsur.jpg);">
    <div class="container">
      <h1>Find the best dishes in your town</h1>
      <p>Pick a dish or a cuisine</p>
      <center>
        <div class="search-bar">
          <%= simple_form_for :dishes, url: root_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="search-button"><i class="fas fa-search"></i></button>
          </div>
          <% end %>
        </div>
      </center>
    </div>
  </div>
</div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= form_with url: dishes_path, method: :get, class: "d-flex my-3" do  |f| %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a dish"
        %>
        <%= f.select :type,
          collection: ["Dish", "Restaurant"] %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<center>
  <div class="card-container mt-5">
    <% @dishes.each do |dish| %>
      <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <h4 class="card-cuisine"><%= dish.category.cuisine %></h4><br>
        <h2 class="card-name"><%= dish.name %></h2>
        <h2 class="card-rank">Rank</h2>
        <p class="card-restaurant"><%= dish.restaurant.name %></p>
        <% if dish.category.food_type %>
          <p class="card-type"><%= dish.category.food_type %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</center>
