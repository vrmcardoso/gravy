<div class="suggestions">
  <div class="categories-container">
    <h2 Class="index-title">Best Pizzas in your area</h1>
    <div class="card-container">
      <% @dishes.each do |dish| %>
        <%=link_to "dishes/#{dish.id}" do%>
          <% if dish.category.food_type == "Pizza" %>
          <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <h4 class="card-cuisine"><%= dish.category.cuisine %></h4>
            <h2 class="card-name"><%= dish.name %></h2>
            <h2 class="card-rank">Rank</h2>
            <p class="card-restaurant"><%= dish.restaurant.name %></p>
            <% if dish.category.food_type %>
