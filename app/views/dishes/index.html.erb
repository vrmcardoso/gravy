<div class="banner-container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dmndhddgf/image/upload/v1669735258/development/pablo-merchan-montes-Orz90t6o0e4-unsplash_fclsur.jpg);">
    <div class="container">
      <h1>Find the best dishes in your town</h1>
      <p>Pick a dish or a cuisine</p>
      <center>
        <div class="search-bar" style="">
          <%= form_with url: top_path, method: :get, class: "d-flex my-3 form_style" do  |f| %>
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                style: "background-color: white; margin-left: 5%; margin-right: -7%; border: none; width: 167px; border-radius: 10px; height: 42px",
                placeholder: "Find a dish"
                %>
            <%= f.select(:type, ["Dish", "Restaurant"], {}, { class: "form_style_select" }) %>
            <button class= "button-search" >
              <i class="fa-solid fa-magnifying-glass mt-2"></i>
            </button>
          <% end %>
        </div>
      </center>
    </div>
  </div>
</div>


