
<div class="navbar2">
  <%= link_to "Sushi", top_path(query: "Sushi", type: @type), class: "btn buttons"%>
  <%= link_to "Pizza", top_path(query: "Pizza", type: @type), class: "btn buttons"%>
  <%= link_to "Pasta", top_path(query: "Pasta", type: @type), class: "btn buttons"%>
  <%= link_to "Portuguese", top_path(query: "Portuguese", type: @type), class: "btn buttons"%>
  <%= link_to "Norwegian", top_path(query: "Norwegian", type: @type), class: "btn buttons"%>
  <%= link_to "Italian", top_path(query: "Italian", type: @type), class: "btn buttons"%>
</div>

<div class="d-flex">
  <div class="col-8">
    <% if @type == "Dish" %>
      <center> <h1 class="my-3" > Best Dishes for <%= params[:query] %> </h1> </center>
    <% else %>
      <center> <h1 class="my-3" > Best Restaurants for <%= params[:query] %> </h1> </center>
    <% end %>
  </div>
  <div class="col-2">
    <form class="form">
      <h5 class="mt-3">Choose rank</h5>
      <div class="switch-field">
        <% if @type == "Dish" %>
          <%= link_to "Dish", top_path(query: params[:query], type: "Dish"), class: "toggle-dish-checked" %>
        <% else %>
          <%= link_to "Dish", top_path(query: params[:query], type: "Dish"), class: "toggle-dish" %>
        <% end %>
        <% if @type == "Restaurant" %>
          <%= link_to "Restaurant", top_path(query: params[:query], type: "Restaurant"), class: "toggle-res-checked" %>
        <% else %>
          <%= link_to "Restaurant", top_path(query: params[:query], type: "Restaurant"), class: "toggle-res" %>
        <% end %>
      </div>
  </div>
</div>

<%= render "shared/list" %>

