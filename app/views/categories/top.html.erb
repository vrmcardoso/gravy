<button type="button"> Chinese</button>
<button type="button"> Thai</button>

</div>

<div class="big-box container">

      <%@dishes.first(10).each_with_index do |dish, rank|%>


  <div class="card-product">
    <img src="https://images.pexels.com/photos/1438672/pexels-photo-1438672.jpeg?auto=compress&cs=tinysrgb&w=600" />
    <div class="card-product-infos">


      <h2><%= dish.name %></h2>
      <p><%= dish.recipe%></p>
      <p><%= @restaurants.find_by(id: dish.restaurant_id).name%></p>
      <p><%= @restaurants.find_by(id: dish.restaurant_id).address%></p>
      <p>#<%= rank + 1 %></p>
      <%#@dishes.where(category_id: dish.category_id).order("sum_points DESC").first(5)%>

      <div class="symbols">
        <% if dish.peanuts? %>
          <i class="fa-solid fa-brain"></i>
        <% end %>

        <% if dish.milk?%>
          <i class="fa-solid fa-cow"></i>
        <% end %>

        <% if dish.eggs? %>
          <i class="fa-solid fa-egg"></i>
        <% end %>

        <% if dish.shellfish? %>
          <i class="fa-solid fa-shrimp"></i>
        <% end %>

        <% if dish.soy? %>
          <i class="fa-solid fa-bowl-rice"></i>
        <% end %>
      </div>

    </div>
  </div>
      <%end%>
</div>
